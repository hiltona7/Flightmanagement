<!--
Create HTML page for Passengers    
-->

@model Flightmanagement.Web.Models.PassengerViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Passenger</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="myDiv">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="myDiv">
                    <label asp-for="Job" class="control-label"></label>
                </div>
                <input asp-for="Job" class="form-control" />
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="myDiv">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="myDiv">
                    <label asp-for="Age" class="control-label"></label>
                </div>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="myDiv">
                    <label asp-for="Flight_id" class="control-label"></label>
                </div>
                <input asp-for="Flight_id" class="form-control" />
                <span asp-validation-for="Flight_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<form asp-area="" asp-controller="Passengers" asp-action="Index">
    <button class="button">
        Back to Passengers
    </button>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}