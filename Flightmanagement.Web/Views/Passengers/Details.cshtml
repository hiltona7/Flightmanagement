<!--
Details HTML page for Passengers
-->

@model Flightmanagement.Data.Passenger

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>Passenger Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking_info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking_info)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight_id)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Booking_info != "")
            {
                <td>@Html.DisplayFor(model => model.Flight_id)</td>
            }
            else
            {
                <td>@Html.DisplayText(" ")</td>
            }
        </dd>
    </dl>
</div>
<div>

    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "button" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "button" })
    <form asp-area="" asp-controller="Passengers" asp-action="Index">
        <button class="button">
            Back to Passengers
        </button>
    </form>
</div>
